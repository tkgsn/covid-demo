<RootWidget>:
    orientation: 'vertical'
    
    inputEpsilon: epsilonContent
    inputNPeople: n_peopleContent
    inputNGrid: n_gridContent

    BoxLayout:
        size_hint_y: None
        height: 50.0
        
        Label:
            text: 'Îµ'
            size_hint_x: 0.1

        Slider:
            id: epsilonSlider
            size_hint_x: 0.75
            min: 0.1
            max: 10.0
            value: 2.0

        TextInput:
            id: epsilonContent
            size_hint_x: 0.25
            text: '{:.1f}'.format(epsilonSlider.value)
            multiline: False
            
    BoxLayout:
        size_hint_y: None
        height: 50.0
        
        Label:
            text: 'n people'
            size_hint_x: 0.1

        Slider:
            id: n_peopleSlider
            size_hint_x: 0.75
            min: 1
            max: 500
            value: 200

        TextInput:
            id: n_peopleContent
            size_hint_x: 0.25
            text: '{:.0f}'.format(n_peopleSlider.value)
            multiline: False
            
    BoxLayout:
        size_hint_y: None
        height: 50.0
        
        Label:
            text: 'n grid'
            size_hint_x: 0.1

        Slider:
            id: n_gridSlider
            size_hint_x: 0.75
            min: 2
            max: 50
            value: 50

        TextInput:
            id: n_gridContent
            size_hint_x: 0.25
            text: '{:.0f}'.format(n_gridSlider.value)
            multiline: False


    BoxLayout:
        size_hint_y: None
        height: 50.0
        Button:
            id: button1
            text: "START"
            font_size: 48
            on_press: root.start_clicked()
    BoxLayout: